<section class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

    <div class="resources grid grid-3col">
        <div class="resource flex-group-left">
            <label for="system.resources.health.value" class="resource-label">Health</label>
            <div class="resource-content flexrow flex-center flex-between">
                <input type="text" name="system.resources.health.value" value="{{system.resources.health.value}}" data-dtype="Number">
                <span> / </span>
                <span>{{system.resources.health.max}}</span>
            </div>
        </div>
        <div class="resource flex-group-center">
            <label for="system.resources.health.value" class="resource-label">Fatigue</label>
            <div class="resource-content flexrow flex-center flex-between">
                <input type="text" name="system.resources.fatigue.value" value="{{system.resources.fatigue.value}}" data-dtype="Number">
                <span> / </span>
                <span>{{system.resources.fatigue.max}}</span>
            </div>
        </div>
    </div>

    {{!-- sheet tabs --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="tab-main">Main</a>
        <a class="item" data-tab="inventory">Inventory</a>
    </nav>
</section>