<section
        class="tab scrollable ataglance {{tabs.ataglance.cssClass}}"
        data-group="primary"
        data-tab="ataglance"
>

    <div class="attributes">
    {{#each system.attributes as | attribute key |}}
        <div class="attribute flexrow flex-group-center">
            <label for="system.attributes.{{key}}.xp" class="resource-label flexlarge align-left" data-label="{{attribute.label}}">{{attribute.label}}</label>
            <input type="text" name="system.attributes.{{key}}.xp" value="{{attribute.xp}}" data-dtype="Number"/>
            <span class="attribute-score">{{attribute.score}}</span>
            <span class="attribute-mod">{{numberFormat attribute.mod decimals=0 sign=true}}</span>
        </div>
    {{/each}}
    </div>
</section>